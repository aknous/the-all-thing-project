# Database (local dev)
databaseUrl=postgresql+asyncpg://allthing:allthing@localhost:5432/allthing_dev

# Redis (not required to be running yet, but must exist)
redisUrl=redis://localhost:6379/0

# Secrets (dev-only values are fine)
secretKey=dev-secret-key-change-me
adminKey=dev-admin-key-change-me

# Cloudflare Turnstile (OPTIONAL - leave empty to disable)
# Get keys from: https://dash.cloudflare.com/?to=/:account/turnstile
# For testing, use: 1x0000000000000000000000000000000AA
turnstileSecretKey=

# CORS (comma-separated, optional)
# corsOrigins=http://localhost:3000,https://yourdomain.com

# Cookie settings (optional)
# cookieDomain=.yourdomain.com
# cookieSecure=true
